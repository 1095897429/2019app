<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hour1"
        style="@style/TimeCountStyle"
        android:text="0" />

    <TextView
        android:id="@+id/hour2"
        style="@style/TimeCountStyle"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:text=":" />

    <TextView
        android:id="@+id/min1"
        style="@style/TimeCountStyle"
        android:text="0" />


    <TextView
        android:id="@+id/min2"
        style="@style/TimeCountStyle"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginRight="5dp"
        android:textSize="14sp"
        android:text=":" />

    <TextView
        android:id="@+id/se1"
        style="@style/TimeCountStyle"
        android:text="0" />


    <TextView
        android:id="@+id/se2"
        style="@style/TimeCountStyle"
        android:text="0" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/slipt_weafare_task_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@mipmap/weafarebanner"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="91dp" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/content_see"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="咸鱼APP"
                android:textColor="#333333"
                android:textSize="16sp"
                />

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />


            <TextView
                android:id="@+id/see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览:3200"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="@drawable/slipt_weafare_see_bg"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                />

        </LinearLayout>



        <TextView
            android:id="@+id/coin"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/content_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没钱花？上咸鱼置换零花钱"
            android:textColor="#979797"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/toComple"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/slipt_weafare_btn_bg"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />



    </RelativeLayout>


</LinearLayout>
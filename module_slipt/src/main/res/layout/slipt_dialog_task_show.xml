<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slipt_reward_red_bg"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜您已抢到"
        android:paddingTop="24dp"
        android:textColor="#D12626"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享给好友任务红包"
        android:padding="12dp"
        android:textColor="#FFF0AF"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/ad_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="100"
        android:drawableRight="@mipmap/slipt_coin"
        android:textColor="#FFF0AF"
        android:textSize="24sp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ad_see_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="再看看"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/slipt_task_btnleft_bg"
            android:textColor="#FFF0AF"
            android:textSize="16sp"
            />


        <Space
            android:layout_width="26dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/ad_go_complete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="前往完成"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/slipt_task_btnright_bg"
            android:textColor="#FF4646"
            android:textSize="16sp"
            />


    </LinearLayout>


    <TextView
        android:id="@+id/ad_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center"
        android:text="@string/slipt_remark"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        />




</LinearLayout>

